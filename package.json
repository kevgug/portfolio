{
  "name": "my-app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prepare": "npm run gen:essays && svelte-kit sync",
    "dev": "nodemon --watch static/essays/ -e md --exec \"npm run dev:vite\"",
    "dev:vite": "NODE_ENV=development npm run prepare && tailwind-theme-mirror --typescript --output ./src/lib && vite dev",
    "build": "NODE_ENV=production npm run prepare && tailwind-theme-mirror --typescript --output ./src/lib && vite build && node scripts/post-build.mjs",
    "deploy": "touch build/.nojekyll && gh-pages -d build -t true",
    "preview": "vite preview",
    "check": "NODE_ENV=development npm run prepare && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "NODE_ENV=development npm run prepare && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "gen:essays": "node scripts/generate-essay-index.mjs && node scripts/generate-rss.mjs"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^1.0.0",
    "@sveltejs/adapter-static": "^1.0.5",
    "@sveltejs/kit": "^1.0.0",
    "@types/d3-scale": "^4.0.8",
    "@types/highlight.js": "^9.12.4",
    "@types/tinycolor2": "^1.4.6",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.8.1",
    "svelte": "^3.54.0",
    "svelte-check": "^3.0.1",
    "tailwind-theme-mirror": "^0.0.4",
    "tailwindcss": "^3.2.4",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "vite": "^4.0.0"
  },
  "type": "module",
  "dependencies": {
    "@types/marked": "^5.0.2",
    "d3-scale": "^4.0.2",
    "gh-pages": "^5.0.0",
    "gsap": "^3.13.0",
    "marked": "^16.2.1",
    "tinycolor2": "^1.6.0"
  }
}
